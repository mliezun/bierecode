    <div class="max-w-4xl mx-auto space-y-10">
      <div class="flex justify-start">
        <a href="/" class="inline-flex items-center text-sm font-medium text-yellow-600 hover:text-yellow-700 transition-colors group">
          <Icon name="lucide:arrow-left" class="w-4 h-4 mr-2 transform group-hover:-translate-x-1 transition-transform" />
          Back to Homepage
        </a>
      </div>

